{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120
  },
  "linter": {
    "enabled": false,
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "off",
        "noParameterAssign": "off"
      },
      "suspicious": {
        "noShadowRestrictedNames": "off"
      }
    }
  },
  "files": {
    "ignore": ["python"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
