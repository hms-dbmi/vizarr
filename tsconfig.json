{
  "include": ["src", "types", "main.ts"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "jsx": "preserve",
    "paths": {
      "*": ["./node_modules/@danmarshall/deckgl-typings/*"]
    }
  }
}
