{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/@danmarshall/deckgl-typings/*"],
      "@/*": ["./src/*"]
    },
    "types": ["vite/client"]
  }
}
